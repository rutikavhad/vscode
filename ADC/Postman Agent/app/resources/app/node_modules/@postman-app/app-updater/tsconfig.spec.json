{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../build/@postman-app/app-updater",
    "tsBuildInfoFile": "../../build/@postman-app/app-updater/tsconfig.spec.tsbuildinfo",
    "module": "ES2015",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/__tests__/**/*.ts",
    "**/*.d.ts",
    "../../global.d.ts",
    "../../global-types/modules.d.ts",
    "../../types/globals/flows/global.d.ts"
  ]
}
