{
	"$id": "ws-socketio-message",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"type": {
			"type": "string",
			"const": "ws-socketio-message"
		},
		"id": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"workspace": {
			"type": "string"
		},
		"createdAt": {
			"type": "string"
		},
		"updatedAt": {
			"type": "string"
		},
		"payload": {
			"type": "object",
			"properties": {
				"eventName": {
					"type": "string"
				},
				"acknowledgement": {
					"type": "boolean"
				},
				"args": {
					"minItems": 1,
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "object",
								"properties": {
									"content": {
										"type": "string"
									},
									"type": {
										"type": "string",
										"enum": [
											"text",
											"json"
										]
									}
								},
								"required": [
									"content",
									"type"
								],
								"additionalProperties": false
							},
							{
								"type": "object",
								"properties": {
									"content": {
										"type": "string"
									},
									"type": {
										"type": "string",
										"const": "binary"
									},
									"subtype": {
										"type": "string",
										"enum": [
											"hex",
											"base64"
										]
									}
								},
								"required": [
									"content",
									"type",
									"subtype"
								],
								"additionalProperties": false
							}
						]
					}
				}
			},
			"required": [
				"eventName",
				"args"
			],
			"additionalProperties": false
		},
		"children": {
			"maxItems": 0,
			"type": "array",
			"items": {
				"not": {}
			}
		},
		"extensions": {
			"type": "object",
			"properties": {},
			"additionalProperties": false
		}
	},
	"required": [
		"type",
		"payload"
	],
	"additionalProperties": false
}